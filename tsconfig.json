{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@db/*": [
        "src/db/generated/prisma/*"
      ]
    },
    "types": [
      "bun-types"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "jsx": "react",
    "ignoreDeprecations": "6.0"
  }
}